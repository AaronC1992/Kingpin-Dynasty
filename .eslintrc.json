{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }]
  },
  "globals": {
    "player": "writable",
    "EventBus": "readonly",
    "GameBalance": "readonly",
    "GameMeta": "readonly",
    "GameLogging": "readonly"
  }
}
